<com.google.android.setupdesign.GlifLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setup_wizard_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            android:id="@+id/item1"
            layout="@layout/icon_with_label_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sud_items_margin_top"
            android:layout_marginLeft="?attr/sudMarginStart"
            android:layout_marginRight="?attr/sudMarginEnd"/>
        <include
            android:id="@+id/item2"
            layout="@layout/icon_with_label_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sud_items_margin_inbetween"
            android:layout_marginLeft="?attr/sudMarginStart"
            android:layout_marginRight="?attr/sudMarginEnd"/>
        <com.google.android.setupdesign.view.FillContentLayout
            android:id="@+id/animation_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxWidth="@dimen/animation_max_size"
            android:maxHeight="@dimen/animation_max_size"
            style="@style/SudContentFrame">
            <ImageView
                android:id="@+id/animation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter" />

        </com.google.android.setupdesign.view.FillContentLayout>
    </LinearLayout>
</com.google.android.setupdesign.GlifLayout>